<body>
  <p>查找最大的数：</p>
  <p id = "demo"></p>
  <script type="text/javascript">
    x = findMax(1,123,500,44,88);
    function findMax() {
      var i,max = arguments[0];
      if(arguments.length < 2) {
        return max;
      }
      for(i = 1; i < arguments.length; i++) {
        if(arguments[i] > max) {
          max = arguments[i];
        }
      }
      return max;
    }
    document.getElementById("demo").innerHTML = findMax(4, 5, 6, 100);
  </script>
